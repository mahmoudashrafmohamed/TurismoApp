<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_registeration_as"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrationbg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mahmoud_ashraf.turismoapp.activities.RegisterationAsActivity"
    tools:showIn="@layout/activity_registeration_as">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">

                <TextView
                    android:text="&lt;"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_back" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="Registeration as"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />

            </LinearLayout>

            <Button
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:text="Tourist"
                android:id="@+id/touristbtn"
                android:layout_marginBottom="15dp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/roundedbutton"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginBottom="15dp"
                android:text="Tour Guide"
                android:id="@+id/tourguidebtn"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/roundedbutton"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:text="Car Owner"
                android:id="@+id/carownerbtn"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/roundedbutton"/>





        </LinearLayout>
    </ScrollView>

</RelativeLayout>
